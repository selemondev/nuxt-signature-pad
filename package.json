{
  "name": "nuxt-signature-pad",
  "version": "1.8.0",
  "description": "Nuxt 3 based smooth signature drawing component âœ¨",
  "packageManager": "pnpm@10.20.0",
  "repository": "selemondev/nuxt-signature-pad",
  "license": "MIT",
  "author": "Selemondev",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --minor --release  && npm publish && git push --follow-tags",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit"
  },
  "dependencies": {
    "@nuxt/kit": "^4.2.0",
    "signature_pad": "^5.1.1"
  },
  "devDependencies": {
    "@nuxt/devtools": "^3.1.0",
    "@nuxt/eslint-config": "^1.10.0",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.2.0",
    "@nuxt/test-utils": "^3.20.1",
    "@types/node": "^24.9.2",
    "changelogen": "^0.6.2",
    "eslint": "^9.38.0",
    "nuxt": "^4.2.0",
    "typescript": "5.9.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.12"
  }
}
